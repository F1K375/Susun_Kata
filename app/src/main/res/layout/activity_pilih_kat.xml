<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_kategori"
    android:paddingLeft="30dp"
    tools:context="com.mad.f1k375.susunkata.pilih_kategori">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="115dp"
        android:layout_width="344dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:background="@drawable/btn_hewan"
                android:layout_width="155dp"
                android:layout_height="48dp"
                android:id="@+id/hewan"
                android:onClick="Play_game"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:background="@drawable/btn_buah"
                android:layout_width="155dp"
                android:layout_height="48dp"
                android:id="@+id/buah"
                android:onClick="Play_game"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:background="@drawable/btn_sayur"
                android:layout_width="155dp"
                android:layout_height="48dp"
                android:id="@+id/sayur"
                android:onClick="Play_game"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:background="@drawable/btn_profesi"
                android:layout_width="155dp"
                android:layout_height="48dp"
                android:id="@+id/profesi"
                android:onClick="Play_game"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:background="@drawable/btn_keluarga"
                android:layout_width="155dp"
                android:layout_height="48dp"
                android:id="@+id/keluarga"
                android:onClick="Play_game"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:background="@drawable/btn_transport"
                android:layout_width="155dp"
                android:layout_height="48dp"
                android:id="@+id/transport"
                android:onClick="Play_game"/>
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
